CFLAGS = -Wall -lm -lpthread -std=c++0x

all: TSP.h TSP.cpp Threads.h Threads.cpp main.cpp
	g++ -o TSP TSP.h TSP.cpp Threads.h Threads.cpp main.cpp $(CFLAGS) 

clean:
	rm -f TSP *.tour